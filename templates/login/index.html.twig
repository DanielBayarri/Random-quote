{% extends 'base.html.twig' %}

{% block title %}Log in
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<form action="{{ path('app_login') }}" method="post" class="form-login">
		<label for="username">Email:</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}" class="nes-input">

		<label for="password">Password:</label>
		<input type="password" id="password" name="_password" class="nes-input">

		{# If you want to control the URL the user is redirected to on success #}
		<input type="hidden" name="_target_path" value="/" >
		<button type="submit" class="nes-btn is-primary">Login</button>
		<a href="{{path('app_user_registration')}}" type="button" class="nes-btn is-success">Registration</a>
	</form>

{% endblock %}
